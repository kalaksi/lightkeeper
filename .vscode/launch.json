    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'lightkeeper'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=lightkeeper",
                    "--package=lightkeeper"
                ],
                "filter": {
                    "name": "lightkeeper",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug",
                "QT_LOGGING_RULES": "*.debug=true; qt.*.debug=false"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'lightkeeper'",
            "cargo": {
                "args": [
                    "",
                    "--no-run",
                    "--bin=lightkeeper",
                    "--package=lightkeeper"
                ],
                "filter": {
                    "name": "lightkeeper",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
